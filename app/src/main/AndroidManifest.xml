<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="uz.nurlibaydev.numberpuzzle15">

    <application
        android:allowBackup="true"
        android:name="uz.nurlibaydev.numberpuzzle15.app.App"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NumberPuzzle15"
        tools:targetApi="31">
        <activity
            android:name="uz.nurlibaydev.numberpuzzle15.ui.screens.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="uz.nurlibaydev.numberpuzzle15.ui.screens.GameActivity"
            android:exported="true" />

        <activity
            android:name="uz.nurlibaydev.numberpuzzle15.ui.screens.InfoActivity"
            android:exported="true" />

        <activity
            android:name="uz.nurlibaydev.numberpuzzle15.ui.screens.StatisticsActivity"
            android:exported="true" />

    </application>

</manifest>